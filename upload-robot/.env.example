# Configuração do Banco de Dados
DB_DIALECT=mssql
DB_HOST=localhost
DB_PORT=1433
DB_USER=sa
DB_PASSWORD=sua_senha
DB_NAME=marh_db
DB_ENCRYPT=true

# Tabelas e Colunas
EMPLOYEES_TABLE=marh_employees
EMPLOYEES_ID_COLUMN=id
EMPLOYEES_NAME_COLUMN=name
EMPLOYEES_CHAPA_COLUMN=chapa
EMPLOYEES_CPF_COLUMN=cpf

DOCUMENTS_TABLE=employee_documents
DOCUMENTS_ID_COLUMN=id
DOCUMENTS_EMPLOYEE_ID_COLUMN=employee_id
DOCUMENTS_FILENAME_COLUMN=filename
DOCUMENTS_ORIGINAL_NAME_COLUMN=original_name
DOCUMENTS_MIME_TYPE_COLUMN=mime_type
DOCUMENTS_FILE_SIZE_COLUMN=file_size
DOCUMENTS_FILE_DATA_COLUMN=file_data
DOCUMENTS_CREATED_AT_COLUMN=created_at
DOCUMENTS_MATCHED_BY_COLUMN=matched_by

# Configurações de Upload
INPUT_DIR=E:\documentos_marh
BATCH_SIZE=50
MAX_FILE_SIZE=50485760
CONCURRENT_UPLOADS=5
MIN_SIMILARITY=0.75

# Tipos de arquivo suportados
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.jpg,.jpeg,.png,.gif,.txt,.rtf,.xls,.xlsx

# Configurações de Log e Resume
LOG_FILE=upload_log.json
PROGRESS_FILE=progress.json
ERROR_LOG=errors.log
VERBOSE=true

# Configurações de Performance para 400GB
MEMORY_LIMIT=2048
CHUNK_SIZE=1048576
STREAM_MODE=true
